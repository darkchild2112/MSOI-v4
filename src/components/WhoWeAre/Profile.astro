---
const { profile } = Astro.props;
import { Image } from 'astro:assets';
---

<style lang="scss">

  @import '../../styles/dimensions.scss';

  div {
    display: flex;
    flex-direction: row;

		@media screen and (max-width: $breakpoint-sm){
			flex-direction: column;
		}

    &:not(:last-child) {
      margin-bottom: 50px;
    }

    img	{
		  margin: 0 50px;

      @media screen and (max-width: $breakpoint-sm){
        margin: 0 auto;
		  }
	  }

    h3 {
    	margin-bottom: 10px;
    	padding: 0 30px 5px 0;

      @media (max-width: $breakpoint-sm) {  
        padding: 15px 0px 10px 0;
        text-align: center;
      }
    }
  }
</style>

<div>
  <Image src={ profile.image } alt={ profile.imageAlt } width={200} height={245} />
  <section>
    <h3 set:html={profile.name}></h3>
    <section set:html={profile.blurb}></section>
  </section>
</div>