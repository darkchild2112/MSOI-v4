---

import './ButtonStyles.scss';
import { ButtonTypes, ButtonStyles } from './ButtonTypes'

const { type, style, fill } = Astro.props;

const btnType = type || ButtonTypes.BUTTON;
const btnStyle = style || ButtonStyles.PRIMARY;

---

<button type={btnType} class={`btn ${btnStyle} ${fill ? 'full-width' : ''}`.trim()}>
  <slot />
</button>