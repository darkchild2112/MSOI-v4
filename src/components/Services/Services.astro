---

import { services } from './services.js'
import ButtonLink from '../Button/ButtonLink.astro'
import { ButtonStyles } from '../Button/ButtonTypes'

import Container from '../HOC/Container.astro';

---

<style lang="scss">
	.services-container {
		border: 1px solid blue;
		display: flex;
		flex-direction: row;
		gap: 40px;
		flex-wrap: wrap;
		padding: 20px;
		justify-content: center;


		.service {
			width: 360px;
			border: 1px solid pink;
			
			img {
				border: 1px solid #eee;
				width: 300px;
				height: 300px;
				margin: 0 auto;
				max-width: 100%;
				vertical-align: middle;
				box-sizing: border-box;
				display: block;
			}

			h3 {
				text-align: center;
			}

			p {
				text-align: center;
			}

			.btn {
				border: 1px solid black;
			}
		}
	}
</style>

<Container id="Services">	  
	<h2>Services</h2>
	<p id="ServicesIntroText">At Making Sense Of It we offer a range of services. The following sections give some brief detail about each of these services we offer.</p>
	<section class="services-container">
		{ 
			services.map((item) => (
				<section class="service">
					<a href={item.link}>
						<img src={item.image} class="img-responsive" alt={item.imageAlt} />
					</a>
					<h3>{item.heading}</h3>
					<p>{item.text}</p>
					<ButtonLink buttonStyle={ButtonStyles.SECONDARY} destination={item.link}>Find out more...</ButtonLink>
				</section>
			))
		}
	</section>
</Container>