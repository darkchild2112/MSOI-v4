---

import { services } from './services.js'
import ButtonLink from '../Button/ButtonLink.astro'
import { ButtonStyles } from '../Button/ButtonTypes'

---

<div id="Services" class="container-fluid text-center pageSection">
		
  <div class="container">
        
    <h2>Services</h2>
    
    <p id="ServicesIntroText">At Making Sense Of It we offer a range of services. The following sections give some brief detail about each of these services we offer.</p>
    
    <div class="row">

      { 
        services.map((item) => (
          <div class="col-sm-4">
            <div class="innerServiceContainer">
              <a href={item.link}>
                <img src={item.image} class="img-responsive"  alt={item.imageAlt} />
              </a>
              <h3>{item.heading}</h3>
              <p>{item.text}</p>
              <ButtonLink buttonStyle={ButtonStyles.SECONDARY} destination={item.link}>Find out more...</ButtonLink>
            </div>
          </div>
        ))
      }
      
    </div>
  </div>
</div>