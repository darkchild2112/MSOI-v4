---
import Container from '../HOC/Container.astro'
---

<style lang="scss">

	@import '../../styles/dimensions.scss';

  #banner	{
		background-color: #F9FDFE;
		background-image: url('../images/many-colorful-hands-with-smileys.jpg');
		background-position: center 0px;
		background-repeat: no-repeat;
		background-size: auto;
		background-color: #fff;
		border-bottom: 3px solid #27bbdf;
		height: 450px;

		@media screen and (min-width: $breakpoint-lg) and (max-width: $breakpoint-xl){
			background-position: -100px 30px;
		}

		@media screen and (min-width: $breakpoint-md) and (max-width: $breakpoint-lg){
			background-position: center 50px;
		}

		@media screen and (min-width: $breakpoint-sm) and (max-width: $breakpoint-md){
			background-position: -100px 100px;
		}

		@media screen and (max-width: $breakpoint-sm) {
			background-position: -200px 120px;
			height: 580px;
		}

		section {
			padding-top: 50px;
			padding-left: 20px;

			@media screen and (max-width: $breakpoint-sm){
				padding-top: 10px;
				padding-left: 0;
			}

			h1 {
				font-size: 2.5rem;
				padding-bottom: 5px;
				text-wrap: pretty;

				@media screen and (max-width: $breakpoint-sm){
					font-size: 2.2rem;
					text-align: center;
				}
			}

			p {
				width: 75%;

				@media screen and (min-width: $breakpoint-xl) and (max-width: $breakpoint-xxl){
					width: 80%;
				}

				@media screen and (min-width: $breakpoint-lg) and (max-width: $breakpoint-xl){
					width: 90%;
				}

				@media screen and (max-width: $breakpoint-lg) {
					width: 100%;
				}

				@media screen and (max-width: $breakpoint-sm){
					text-align: center;
					padding: 0 7px;
				}
			}
		}
	}
</style>

<div id="banner">
  <Container>
		<section>
			<h1>Psychology Services for children, families and schools</h1> 
			<p>
				Based in Worthing, West Sussex, Making Sense Of It Ltd provide Clinical 
				Psychology services to children, families and schools in the Sussex area. 
				Specialising in autism assessments in Sussex.
			</p> 
		</section>
  </Container>
</div>