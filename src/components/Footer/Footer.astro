---
import Facebook from '../Icons/Facebook.astro';
import Twitter from '../Icons/Twitter.astro';
import Email from '../Icons/Email.astro';
import Printer from '../Icons/Printer.astro';

---

<style lang="scss">
  
  .footer-container {
    background-color: #2E2E2E; 
    color: white; 
    padding: 2rem 2rem 4rem 2rem;
    margin-top: 3rem;

    a {
       color: white;
    }

    .social-media-icons {
      text-align: center;
      font-size: 3rem;
      fill: #fff;
      
      a {
        padding-right: 1rem;

        &:last-child {
          padding-right: 0;
        }

        &:visited {
          fill: #fff;
        }
      }
    }

    .copyright {
      float: left;
    }
    
    .footerNav {
      float: right;

      a {
        padding-right: 1rem;
        text-decoration: underline;

        &:last-child {
          padding-right: 0;
        }
      }
    }
  }

</style>

<footer class="container-fluid footer-container">
  <div class="social-media-icons">
    <a target="_blank" href="https://www.facebook.com/sharer.php?u=http://www.makingsenseofit.org.uk/" title="Like us on Facebook">
      <Facebook />
      <span class="visually-hidden">Like us on Facebook</span>
    </a>
    <a target="_blank" href="https://twitter.com/intent/tweet?text=Hello%20world" title="Tweet about us">
      <Twitter />
      <span class="visually-hidden">Tweet about us</span>
    </a>
    <a target="_blank" href="mailto:info@makingsenseofit.org.uk" title="Send us an email">
      <Email />
      <span class="visually-hidden">Send us an email</span>
    </a>
    <a target="_blank" href="javascript: print()" title="Print this page">
      <Printer />
      <span class="visually-hidden">Print this page</span>
    </a>
  </div>
  <p class="copyright">&copy; Copyright { new Date().getFullYear() } - Making Sense Of It Ltd</p>
  <nav class="footerNav">
    <a href="pdfs/PrivacyPolicy.pdf" target="_blank" title="Privacy Policy (opens in a new tab)">Privacy Policy</a>
  </nav>
</footer>