---

import BaseLayout from "../Layouts/BaseLayout.astro";
import Container from "../components/HOC/Container.astro"

---

<style lang="scss">
  .services-container {
    display: flex;
    gap: 2rem;

    nav {
      border: 1px solid red;
      display: flex;
      flex-direction: column;
      margin: 0 auto;
      padding: 0;
      width: 20%;
      max-width: 800px;
      gap: 1rem;
    }

    .services-content {
      border: 1px solid red;
      width: 80%;
    }
  }
</style>

<BaseLayout>
  <Container>
    <div class="services-container">
      <nav>
        <a href="/services/schools">Schools</a>
        <a href="/services/family-mental-health">Child and Family Mental Health</a>
        <a href="/services/learning-disabilities">Children with Learning Disabilities</a>
        <a href="/services/cognitive-assessments">Cognitive Assessments</a>
        <a href="/services/autism-assessments">Autism Diagnostic Service</a>
        <a href="/services/supervision-and-training">Supervision & Training</a>
      </nav>
      <div class="services-content">
        <slot />
      </div>
    </div>
  </Container>
</BaseLayout>